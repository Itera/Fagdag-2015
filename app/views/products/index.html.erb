<h1>Velkommen!</h1>

<div>
  <h2>Sko</h2>
  <p><%= button_to "Legg til", add_to_cart_product_path(1, size: 42), class: "add-product"  %></p>
</div>

<h2>Handlekurv</h2>

<% if @cart.empty? %>
  <p>Din handlekurv er tom.</p>
<% else %>
  <ul>
    <% @cart.products.each do |product, size, amount| %>
      <li>
        <%= product %> (størrelse <%= size %>): <%= amount %>
        <%= button_to "Fjern én", decrease_from_cart_product_path(1, size: size) %>
        <%= button_to "Fjern alle", remove_from_cart_product_path(1, size: size) %>
      </li>
    <% end %>
  </ul>
<% end %>
